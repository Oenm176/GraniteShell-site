// Mengimpor file CSS global yang berisi style dasar dan perintah Tailwind.
import '../styles/global.css';

// Mendefinisikan variabel untuk menyimpan data statistik dari GitHub.
// Nilai defaultnya 0 jika terjadi error saat pengambilan data.
let stars = 0;
let forks = 0;
let contributors = 0;

// Blok try...catch digunakan untuk menangani error jika koneksi ke API GitHub gagal.
try {
  // Mengambil (fetch) data utama dari repository GraniteShell melalui API GitHub.
  const repoRes = await fetch('https://api.github.com/repos/Oenm176/GraniteShell');
  // Jika permintaan berhasil (response.ok), proses datanya.
  if (repoRes.ok) {
    const repoData = await repoRes.json(); // Mengubah response menjadi format JSON.
    // Menyimpan jumlah bintang dan fork ke dalam variabel.
    stars = repoData.stargazers_count;
    forks = repoData.forks_count;
  }

  // Mengambil data kontributor. Ini memerlukan panggilan API terpisah.
  const contributorsRes = await fetch('https://api.github.com/repos/Oenm176/GraniteShell/contributors');
  if (contributorsRes.ok) {
    const contributorsData = await contributorsRes.json();
    // Menghitung jumlah kontributor dari panjang array yang dikembalikan.
    contributors = contributorsData.length;
  }
} catch (error) {
  // Jika terjadi error (misal: tidak ada internet), tampilkan pesan di konsol terminal
  // agar kita tahu ada masalah, namun website tetap berjalan dengan angka 0.
  console.error("Gagal mengambil data dari GitHub API:", error);
}
